
public class Empleado {

	String nif, nombre;
	int sueldoBase, horasExtra, nHijos;
	double irpf;
	static int importeHoraExtra;
	boolean casado;
	
	//Constructor vacío:
	
	public Empleado() {
		this.nif = "";
		this.nombre = "";
		this.sueldoBase = 0;
		this.horasExtra = 0;
		this.irpf = 0;
		this.nHijos = 0;
		this.importeHoraExtra = 0;
		this.casado = false;
	}
	
	//Constructor con parámetros:
	
	public Empleado(String nif) {
		this.nif = "35564733-F";
	}
	
	//Getters
	
	public String getNif() {
		return this.nif;
	}
	
	public String getNombre() {
		return this.nombre;
	}
	
	public int getSueldoBase() {
		return this.sueldoBase;
	}
	
	public int getHorasExtra() {
		return this.horasExtra;
	}
	
	public double getIrpf() {
		return this.irpf;
	}
	
	public int getNHijos() {
		return this.nHijos;
	}

	public int getImporteHoraExtra() {
		return this.importeHoraExtra;
	}
	
	public boolean getCasado() {
		return this.casado;
	}
	
	//Setters
	
	public void setNif(String nif) {
		this.nif = nif;
	}
	
	public void setNombre(String nombre) {
		this.nombre = nombre;
	}
	
	public void setSueldoBase(int sueldoBase) {
		this.sueldoBase = sueldoBase;
	}
	
	public void setHorasExtra(int horasExtra) {
		this.horasExtra = horasExtra;
	}
	
	public void setIrpf(int irpf) {
		this.irpf = irpf;
	}
	
	public void nHijos(int nHijos) {
		this.nHijos = nHijos;
	}
	
	public void importeHoraExtra(int importeHoraExtra) {
		this.importeHoraExtra = importeHoraExtra;
	}
	
	public void casado(boolean casado) {
		this.casado = casado;
	}
	
	//método complemento horas extras:
	
	public double complementoExtra() {
		double complemento = 0;
		complemento = this.horasExtra * 1.75;
		return complemento;
	}
	
	public String toString() {
		return "El empleado de nombre: " + this.nombre + " con el nif: " + this.nif + " con sueldo base de: " + this.sueldoBase + " ha hecho " + this.horasExtra + "horas extra este mes. Con irpf de: " + this.irpf + " %. Tiene a cargo " + this.nHijos + " hijos."; 
	}
}

